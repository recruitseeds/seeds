{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "node scripts/pre-install.js && npm ci && node scripts/post-install.js && npm run build --filter=jobs",
    "watchPatterns": [
      "/apps/jobs/**"
    ]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "npm run start --workspace=jobs",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}